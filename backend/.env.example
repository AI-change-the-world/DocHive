# 应用配置
APP_NAME=DocHive
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# 数据库配置
# PostgreSQL (生产环境推荐)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/dochive
# MySQL (也支持)
# DATABASE_URL=mysql+aiomysql://root:password@localhost:3306/dochive
# SQLite (开发调试推荐，轻量级)
# DATABASE_URL=sqlite:///./dochive.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# 对象存储配置 (OpenDAL)
# 支持: s3 (S3兼容存储), fs (本地文件系统), memory (内存,仅测试)
STORAGE_TYPE=s3
STORAGE_BUCKET=dochive-documents
STORAGE_ENDPOINT=http://localhost:9000  # S3端点 (MinIO/AWS S3/阿里云OSS等)
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_ROOT=/  # 存储根目录

# 本地文件系统存储示例 (开发测试)
# STORAGE_TYPE=fs
# STORAGE_ROOT=./storage
# STORAGE_BUCKET=dochive-documents

# 搜索引擎配置
# 可选: database (数据库原生FTS), elasticsearch (ES), clickhouse (ClickHouse)
# 推荐: 开发调试用 database,生产环境用 elasticsearch 或 clickhouse
SEARCH_ENGINE=database

# Elasticsearch 配置(可选,内存占用较高)
ELASTICSEARCH_URL=
ELASTICSEARCH_INDEX=dochive_documents

# ClickHouse 配置(可选,高性能列式存储)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=dochive

# Qdrant 向量数据库配置
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=dochive_vectors

# LLM 配置
LLM_PROVIDER=openai  # openai, deepseek, anthropic
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEFAULT_MODEL=gpt-3.5-turbo

# Redis 配置（Celery 任务队列）
REDIS_URL=redis://localhost:6379/0

# JWT 认证配置
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OCR 配置
TESSERACT_PATH=C:/Program Files/Tesseract-OCR/tesseract.exe

# 文件上传限制
MAX_UPLOAD_SIZE=52428800  # 50MB
ALLOWED_EXTENSIONS=pdf,docx,txt,md,png,jpg,jpeg

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
